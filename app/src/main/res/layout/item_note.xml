<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/note_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/note_type_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/note_img_txt"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/note_type_img"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/note_type_img"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            tools:text="title"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/note_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_99"
            tools:text="2018-05-01 14:14:35"
            android:layout_toRightOf="@+id/note_type_img"
            android:layout_below="@+id/note_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/note_star"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/star"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line_color"/>
</LinearLayout>
